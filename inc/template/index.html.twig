{% extends 'squelette.html.twig' %}

{% block header %}
	{% if kitten_img != "" %}
		<div class="bloc-header" style="background-image:url('../{{kitten_img}}')">
	{% else %}
		<div class="bloc-header">
	{% endif %}
	<div class="bloc-header-contenu index">
		<div class="row txtcenter">
			<div class="col txtcenter pas bloc-mobile example-text wendy">
				<span class="typed-text"></span>
				<!-- <span class="typed-cursor">|</span> -->
			</div>
		</div>
		<div class="row txtcenter ptl mtl">
			<div class="col txtcenter pas bloc-mobile">
				<a href="generate/" class="h3-like proxima-bold transition not-a-like pts pbs plm prm">What's on your mind ? ...
					{# <i class="fa fa-chevron-right h4-like txtmiddle"></i> #}
				</a>
			</div>
		</div>
	</div>
</div>

<div class="bloc-contenu">
	<div class="bloc-article upload index ptl pbl">
		<div class="bloc-article-container prm plm pbl ptl">
			<div class="row pbl">
				<div class="col txtmiddle uppercase txtcenter">
					<h3 class="proxima h5-like">You have a pretty photo ?</h3>
				</div>
			</div>
			<div class="row pbl">
				<div class="col w60 txtright prl txtmiddle">
					<h2 class="man">
						<i class="fa fa-camera-retro fa-lg prm"></i> 
						Send us the <br class="small-hidden tiny-hidden"/> photo of your cat
					</h2>
				</div>
				<div class="col w40 pll logo-txt txtmiddle tiny-hidden small-hidden">
					<img src="/dist/images/logo-txt.png" class="w60" />
				</div>
			</div>
			<div class="row">
				<div class="col prl pll pbs txtcenter ptl">
					<a href="/upload/" class="pas proxima-bold inbl pts pbs pll prl not-a-like">
						Share it <i class="fa fa-paw pls"></i>
					</a>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="bloc-contenu">
	<div class="bloc-article upload index ptl pbl">
		<div class="bloc-article-container prm plm pbl ptl">
			<div class="row pbl">
				<div class="col txtmiddle uppercase txtcenter">
					<h3 class="proxima h5-like">Latest images</h3>
				</div>
			</div>
		</div>
	</div>
</div>

